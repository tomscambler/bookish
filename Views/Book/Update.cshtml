@model Book
    
@{
    ViewData["Title"] = "Books";
}

<form method="post" asp-controller="Book" asp-action="UpdateConfirm">
    <input asp-for="Id" class="form-control" value="@Model.Id" type="hidden">
    
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" value="@Model.Title">
    </div>

    <div class="form-group">
        <label asp-for="Author"></label>
        <input asp-for="Author" class="form-control" value="@Model.Author">
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a class="btn btn-outline-dark" asp-action="Index">Cancel</a>
</form>


@model List<StockDisplay>

@{
    ViewData["Title"] = "Stock";
}

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">Number in Stock</th>
            <th scope="col">Number Available</th>
        </tr>
    </thead>
    <tbody>
    @foreach (StockDisplay stock in Model)
    {   
        <tr>
            <td>@stock.Title</td>
            <td>@stock.Author</td>
            <td>@stock.TotalStock</td>
            <td>@stock.StockAvailable</td>
        </tr>
    }
    </tbody>
</table>
<a asp-controller="Stock" asp-action="Index" class="btn btn-outline-dark">Back</a>

